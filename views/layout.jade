doctype html
html
  block vars
  head
    meta(charset='utf-8')
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // link(rel='stylesheet', href='//c.weihub.com/css/bootstrap.min.css')
    link(rel='stylesheet', href='//c.weihub.com/css/style.css')
    if styles
      each style in styles
        link(rel='stylesheet', href=style)
    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    != '<!--[if lt IE 9]>'
    != '<script src="/js/html5shiv.js"></script>'
    != '<script src="/js/respond.min.js"></script>'
    != '<![endif]-->'
  body
    .wrapper
      .navbar.navbar-default.navbar-static-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/") WeiHub
            form.navbar-search(action="//www.google.com.hk/search", method="get")
              input.form-control(type="search", name="q", autocapitalize="off", autocomplete='off', spellcheck='false', placeholder='搜索')
          .navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              li: a(href='/article') 文章
              if user
                li: a(href='')= user.fullname
                li: a(href='/signout') 退出
              else 
                li: a(href='/auth') 登录
      block content
    .footer
      .container
        footer
          .pull-left
            | &copy; WeiHub
            a(href='//weibo.com/wangshenwei') 微博
            a(href='//github.com/weareoutman') GitHub
            a(href='//instagram.com/weareoutman') Instagram
          .pull-right
            a(href='http://www.miibeian.gov.cn/', target='_blank') 粤ICP备12079626号
    // script(src='//c.weihub.com/js/jquery-1.10.2.min.js')
    //
      script(src='//c.weihub.com/js/underscore-min.js')
      script(src='//c.weihub.com/js/backbone-min.js')
    // script(src='//c.weihub.com/js/bootstrap.min.js')
    script.
      var require = {
        baseUrl: 'http://c.weihub.com/js/'
      };
    script(src='//c.weihub.com/js/require.js')
    script(src='//c.weihub.com/js/main-built.js')
    if scripts
      each srcipt in scripts
        script(src=script)