doctype html
html
  block vars
  head
    meta(charset='utf-8')
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    if styles
      each style in styles
        link(rel='stylesheet', href=style)
    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    != '<!--[if lt IE 9]>'
    != '<script src="/js/html5shiv.js"></script>'
    != '<script src="/js/respond.min.js"></script>'
    != '<![endif]-->'
  body
    .wrapper
      .navbar.navbar-default.navbar-static-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/") WeiHub
            form.navbar-search(action="//www.google.com.hk/search", method="get")
              input.form-control(type="search", name="q", autocapitalize="off", autocomplete='off', spellcheck='false', placeholder='搜索')
          .navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              li: a(href='/article/') 文章
              li: a(href='/snippet/') 片段
      block content
    .footer
      .container
        footer
          .pull-left
            | &copy; WeiHub
            a(href='//github.com/weareoutman') GitHub
            a(href='//instagram.com/weareoutman') Instagram
            a(href='//weibo.com/wangshenwei') 微博
          .pull-right
            a(href='http://www.miibeian.gov.cn/', target='_blank', rel='nofollow') 粤ICP备12079626号
    script(src='/js/jquery-1.10.2.min.js')
    //
      script(src='/js/underscore-min.js')
      script(src='/js/backbone-min.js')
    script(src='/js/bootstrap.min.js')
    if scripts
      each srcipt in scripts
        script(src=script)